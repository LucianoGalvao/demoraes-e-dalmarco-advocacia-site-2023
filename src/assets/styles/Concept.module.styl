@import 'utils.styl'
.concept
	background-image url('../img/concept.jpg')
	background-repeat no-repeat
	background-position-y -60px
	height 600px
	position relative
	padding 60px 40px

	&:before
		content ''
		width 100%
		height 100%
		background-color rgba(0,0,0, .7)
		display block
		position absolute
		top 0
		left 0
		z-index 1

	> div
		position relative
		z-index 2
		display flex
		flex-direction column
		justify-content space-between
		align-items center
		height 100%

		p
			max-width 800px
			margin 0 auto
			font-size 22px
			line-height 30px
			text-align center
		
		a
			text-decoration none
			font-size 20px
			color $white
			background-color $dark
			padding 10px 40px
			border-radius 10px
			display flex
			align-items center
			transition background-color .3s

			&:hover
				background-color $green

			span
				margin-left 10px

				&:before
					font-size 22px

@media (max-width 1249px)
	.concept
		background-position center
		background-size cover
		height 450px
		> div
			p
				font-size 16px
				line-height 22px

			a
				font-size 14px

