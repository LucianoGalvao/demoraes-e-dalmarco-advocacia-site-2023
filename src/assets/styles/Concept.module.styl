.concept
	background-image url('../img/concept.jpg')
	background-repeat no-repeat
	background-position-y -60px
	height 600px
	position relative
	padding 60px 40px

	&:before
		content ''
		width 100%
		height 100%
		background-color rgba(0,0,0, .7)
		display block
		position absolute
		top 0
		left 0
		z-index 1

	> div
		position relative
		z-index 2

		p
			max-width 800px
			margin 0 auto
			font-size 20px
			line-height 30px
			text-align center



