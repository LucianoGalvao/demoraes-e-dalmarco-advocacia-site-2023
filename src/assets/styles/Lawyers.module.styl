@import 'utils.styl'

.lawyers
	display flex

	.lawyer
		width 50%
		display flex
		justify-content flex-end
		flex-direction column
		align-items center
		background-repeat no-repeat
		background-position center
		background-size cover
		height 1000px
		position relative
		padding 0 40px
		overflow hidden

		&:before
			transition .1s
			height 0
			bottom 0
			background transparent

		&:hover
			&:before
				content ''
				width 100%
				height 100%
				background: transparent linear-gradient(0deg,rgba(0,0,0,.26) 25%,hsla(0,0%,100%,.09) 60%)
				display block
				position absolute
				left 0
				z-index 1

			picture
				img
					filter grayscale(0)

		picture
			position absolute
			height 100%
			width 100%

			img
				width 100%
				height 100%
				object-fit cover
				filter grayscale(1)
				transition .5s

		h2, p
			position relative
			z-index 2

		h2
			margin 0

		p
			max-width 400px
			margin 40px auto 100px
			font-weight 600
			font-size 20px
			line-height 30px
			text-align center

@media (max-width 1440px)
	.lawyers
		.lawyer
			height 600px

			picture
				img
					object-position 0 -200px
				
			p
				margin 10px auto 50px