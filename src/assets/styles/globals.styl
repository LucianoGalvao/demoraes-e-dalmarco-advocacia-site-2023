@import './fonts.styl'

*, *:before, *:after
  box-sizing border-box

html, body
  overflow-x hidden
  scroll-behavior smooth

html
  width 100vw

body
  padding-right 0 !important

img
  display block

a, button
  color inherit
  text-decoration none
  background none
  outline none
  border none
  padding 0
  cursor pointer

strong, b
  font-weight bold

em, i
  font-style italic

u
  text-decoration underline

li
  list-style none

html, body, button, input, select
  font-family: 'CL'

h1, h2, h3
	font-family 'Cinzel'

.container
	width 100vw
	height 100vh

