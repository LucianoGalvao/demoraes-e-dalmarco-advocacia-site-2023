@import 'utils.styl'
.navbar 
	position fixed
	top 50px
	right 150px
	z-index 999
	background-color $green
	padding 60px
	display flex
	justify-content center
	align-items flex-end
	flex-direction column

	&:global(.open) 
		background-color $brown

	:global(.hamburger) 
		width 30px
		height 20px
		display block
		position relative
		border none
		cursor pointer
		background none
		z-index 11

		&:before 
			content ''
		
		&:before, span 
			height 3px
			background #fff
			position absolute
			right 0
			left 0
			transition-property top, bottom, transform, opacity
			transition-duration .2s
			transition-timing-function ease-in-out
		
		&:before 
			top 8px

		span:first-child 
			top 0

		span:last-child 
			bottom 0

		&:global(.open) 

			span:first-child 
				transform rotate(45deg)
				top 10px

			span:last-child 
				transform rotate(-45deg)
				bottom 7px

			&:before 
				opacity 0  
		
	nav
		margin-top 30px
		display flex
		align-items center
		flex-direction column
		max-height 0
		overflow hidden
		margin-top 0
		transition max-height .1s
		width 0
		text-align center

		&:global(.open) 
			max-height 500px
			margin-top 30px
			width 100%

		ul
			margin 0
			padding 0

			li
				text-align center
				margin-bottom 10px

				&:last-child
					margin-bottom 0

				a
					text-decoration none
					color #fff
					font-size 20px
					font-family 'Cinzel'
					letter-spacing 2px
					transition .3s

					&:hover
						color $gold

@media (max-width 1279px)
	.navbar 
		background-color transparent
		width 100%
		height 100vh
		padding 20px
		margin 0
		top 0
		right 0
		background-color transparent

		&:global(.open) 
			background-color $dark

		:global(.hamburger) 
			position fixed
			top 20px
			right 20px

		nav
			max-height 100%
			width 100%
			position absolute
			top 0
			left 102%
			background-color $dark
			transition left .3s
			display flex
			justify-content center
			align-items center
			height 100%
			margin-top 0

			&:global(.open) 
				left 0
				max-height 100%
				margin-top 0

			ul
				padding 20px

				li
					margin-bottom 30px
